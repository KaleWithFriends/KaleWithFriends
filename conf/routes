# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET         /                        controllers.Application.index(username: String ?= null)
POST        /                        controllers.Application.login()
GET         /signup                  controllers.Application.signUp()
POST        /signup                  controllers.Application.postSignUp()
GET         /logout                  controllers.Application.logout()
GET         /profile                 controllers.Application.index(username: String ?= null)
GET         /farmersprofile          controllers.Application.farmersProfile(name: String ?= "Nalo LIFE")
GET         /cookbook                controllers.Application.cookbook()
GET         /recipe                  controllers.Application.recipe(id: Long ?= 0)
GET         /mealplanner             controllers.Application.mealPlanner()
GET         /dashboard               controllers.Application.login()
GET         /local                   controllers.Application.local()
GET         /availablenow            controllers.Application.availableNow()
GET         /farmersdashboard/delete controllers.Application.deleteIngredient(farmer: String ?= "", ingredient : String ?= "")
GET         /farmersdashboard        controllers.Application.login()
GET         /farmersdashboard/addOne controllers.Application.addOne(farmer: String ?= "", ingredient : String ?= "")
GET         /farmersdashboard/subOne controllers.Application.subOne(farmer: String ?= "", ingredient : String ?= "")

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)
